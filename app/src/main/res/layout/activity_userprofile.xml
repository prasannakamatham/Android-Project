<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="15dp"
        />


    <TextView
        android:id="@+id/inpuy_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Employee@PAyroll.com"
        android:textSize="24sp"
        android:textStyle="bold|italic">

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">



        <!-- Name LAbel -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher_foreground"
                android:hint="Fill Name"
                android:drawableLeft="@drawable/empp"
                android:drawablePadding="2dp"
                android:inputType="textCapWords"/>

        </android.support.design.widget.TextInputLayout>
            <!-- Name Label -->
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/input_vehicle_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_launcher_foreground"
                    android:hint="Payroll Number"
                    android:drawableLeft="@drawable/Paypic"
                    android:drawablePadding="2dp"
                    android:inputType="textCapWords"/>
            </android.support.design.widget.TextInputLayout>
            <!-- Email Label -->
             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="8dp"
                 android:layout_marginTop="8dp">

                 <EditText
                 android:id="@+id/input_mobile"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/ic_launcher_foreground"
                 android:hint="phone Number"
                 android:drawableLeft="@drawable/Iphonepic"
                 android:drawablePadding="2dp"
                 android:inputType="numberDecimal"/>
            <android.support.design.widget.TextInputLayout>

                <!--Password Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id=@+id/input_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_launcher_foreground"
                        android:hint="old_password"
                        android:drawablePadding="2dp"
                        android:inputType="textPassword"
                        tools:ignore="InvalidId" />

                    <android:support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        />

                    <EditText
                        android:id="@+id/input_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_parent"
                        android:background="@drawable/ic_launcher_foreground"
                        android:hint="New Password"
                        android:drawablePadding="2dp"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_launcher_foreground"
                    android:hint="Confirm Password"
                    android:drawablePadding="2dp"
                    android:inputType="textPassword"/>

                    <TextView
                        android:id="@+id/input_last_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:Padding="5dp"
                        android:text="Last Logged In"
                        android:textColour="@colour/colourPrimaryDark"
                        android:textsize="18sp"
                        android:textSize="bold"
                        />


                <android.support.v7.design.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:padding="12dp"
                    android:text="Update"
                    />

                </android.support.design.widget.TextInputLayout>

</ScrollView>